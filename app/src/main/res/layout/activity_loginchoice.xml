<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/find_ride_login_bg"
    tools:context=".LoginChoice">

    <ImageView
        android:id="@+id/dash_car"
        android:layout_width="230.00dp"
        android:layout_height="140.50dp"
        android:background="@drawable/dash_car"
        android:layout_marginTop="270dp"
        android:layout_centerHorizontal="true"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/userbtn"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="userloginIntent"
        android:adjustViewBounds="true"
        android:background="@drawable/buttonbg2"
        android:text="User Login"
        android:textColor="@color/white"
        android:fontFamily="@font/open_sans_light"
        android:textStyle="bold"
        android:layout_below="@id/dash_car" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/driverbtn"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:onClick="driverloginIntent"
        android:text="Driver Login"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="@font/open_sans_light"
        android:background="@drawable/buttonbg2"
        android:layout_marginVertical="20dp"
        android:layout_below="@+id/userbtn"/>

</RelativeLayout>
