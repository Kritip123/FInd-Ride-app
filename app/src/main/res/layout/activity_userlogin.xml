<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dash_login_bg">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginHorizontal="30dp"
        app:cardElevation="20dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/nunito_sans"
                android:text="@string/enter_name"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edttextname"
                android:layout_below="@+id/txtname"
                android:layout_margin="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittextbg"
                android:textSize="17sp"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:drawableStart="@drawable/ic_person_black_24dp" />
            <TextView
                android:id="@+id/txtnumber"
                android:layout_below="@+id/edttextname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/nunito_sans"
                android:text="@string/enter_mobile_number"
                android:textSize="20dp"
                android:textStyle="bold" />
        <EditText
            android:id="@+id/edttextnumber"
            android:layout_below="@+id/txtnumber"
            android:layout_margin="30dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:textSize="17sp"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:background="@drawable/edittextbg"
            android:drawableStart="@drawable/ic_phone_black_24dp"
            />
            <TextView
                android:id="@+id/tandc"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginHorizontal="20dp"
                android:text="@string/tandc"
                android:layout_below="@id/edttextnumber"
                android:layout_marginBottom="20dp"
                />
            <Button
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tandc"
                android:layout_centerHorizontal="true"
                android:text="@string/continuetext"
                android:textColor="@color/white"
                android:background="@drawable/buttonbg2"
                android:layout_marginBottom="20dp"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
